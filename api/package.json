{
	"name": "magix-api",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"author": "The Wizard Alliance",
	"scripts": {
		"clear": "rimraf .dist",
		"dev": "cross-env NODE_ENV=development tsx watch --tsconfig tsconfig.json --watch src --watch .core --inspect=9230 src/index.ts --clear-screen=false",
		"build": "npm run clear && tsc -p tsconfig.json",
		"preview": "cross-env NODE_ENV=development tsx --tsconfig tsconfig.json src/index.ts",
		"start": "cross-env NODE_ENV=production node .dist/index.js",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"lint": "npm run build && publint",
		"postinstall": "patch-package",
		"deploy": "caprover deploy"
	},
	"files": [
		".dist",
		"!.dist/**/*.test.*",
		"!.dist/**/*.spec.*"
	],
	"types": "./.dist/index.d.ts",
	"dependencies": {
		"chalk": "^5.6.2",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dayjs": "^1.11.18",
		"dotenv": "^16.4.5",
		"envalid": "^8.1.0",
		"express": "^4.19.2",
		"gpt-tokenizer": "^3.4.0",
		"http-status-codes": "^2.3.0",
		"knex": "^3.1.0",
		"kysely": "^0.28.7",
		"marked": "^17.0.0",
		"multer": "^2.0.2",
		"mysql2": "^3.15.1",
		"nodemailer": "^7.0.6",
		"superagent": "^10.1.1",
		"ws": "^8.18.3"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/multer": "^2.0.0",
		"@types/node": "^20.12.12",
		"@types/nodemailer": "^7.0.2",
		"@types/superagent": "^8.1.9",
		"@types/ws": "^8.18.1",
		"cross-env": "^10.1.0",
		"nodemon": "^3.1.10",
		"npm-run-all": "^4.1.5",
		"patch-package": "^8.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.15",
		"rimraf": "^6.1.2",
		"sass": "^1.93.2",
		"tslib": "^2.6.2",
		"tsx": "^4.9.3",
		"typescript": "5.9.3"
	}
}
